
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 mx-auto mt-3">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <h4>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        </h4>
        <ul class="mx-auto ">
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
        <%= form_with model: @user do |f| %>
          <form enctype="multipert/form-data">
            <div class="form-group">
              <label for="user_name">Name</label>
              <p>
              <%= f.text_field :name, class: "form-control" %>
              </p>
            </div>

            <div class="form-group">
              <label for="user_image">Image</label>
              <p>
              <%= f.file_field :profile_image, accept: "image/*" %>
              </p>
            </div>

            <div class="form-group">
              <label for="user_introduction">introduction</label>
              <p>
              <%= f.text_area :introduction, class: "form-control" %>
              </p>
            </div>

           <div class="form-group">
            <%= f.submit 'Update User', class: "btn btn-secondary" %>
           </div>
          </form>
        <% end %>
    </div>
  </div>
</div>