
<div class="container"><!--部分テンプレのグリッドシステム"container"-->
<% if @book.errors.any? %>
  <h4>
    <%= @book.errors.count %>errors prohibited this obj from being saved:
  </h4>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  <div class="row"><!--部分テンプレのグリッドシステム"row"-->
    <%= render 'info', user: @user, book: @book %>
    <div class="col-md-8 offset-md-1"><!--右側の表示-->
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
           <% @books.each do |book| %>
           <tr>
            <td><%= link_to user_path(book.user) do %>
              <%= image_tag book.user.get_profile_image %>
              <% end %>
            </td>
            <td><%= link_to book_path(book.id) do %>
              <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
           </tr>
           <% end %>
        </tbody>
      </table>
    </div>
  </div><!--部分テンプレ<div class="row"の閉じタグ -->
</div><!--部分テンプレ<div class="container"の閉じタグ -->











