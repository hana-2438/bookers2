<div class="container"><!--部分テンプレのグリッドシステム"container"-->
  <div class="row"><!--部分テンプレのグリッドシステム"row"-->
    <%= render 'info', user: @book.user, book: Book.new %>
      <div class="col-md-8 offset-md-1 mt-3"><!--右側の表示-->
      <h2 class="mt-3">Book detail</h2>
      <table class="table">
        <tbody>
           <tr>
              <td><%= link_to user_path(@book.user) do %>
                <%= image_tag @book.user.get_profile_image %>
                <% end %><br>
                <%= link_to @book.user.name, user_path(@book.user)  %>

              </td>
              <td><%= link_to book_path(@book.id) do %>
                <%= @book.title %>
                <% end %>
              </td>
              <td><%= @book.body %></td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @book.user == current_user %>
                  <%= link_to "Destroy", book_path(@book), class:"btn btn-sm btn-danger", method: :delete, data: { confirm: "本当に消しますか？" } %>
                <% end %>
              </td>
           </tr>

        </tbody>
      </table>














      </div>
  </div>
</div>