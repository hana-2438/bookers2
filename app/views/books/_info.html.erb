
    <div class="col-md-3">
      <h2 class="mt-4">User info</h2>
      <p><%= image_tag user.get_profile_image %></p>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <div class="row">

           <%= link_to edit_user_path(user) , class: "btn btn-outline-secondary btn-block" do %>
             <i class="fas fa-user-cog"></i>
           <% end %>
      </div>
      <h2 class="mt-4">New book</h2>

        <%= form_with model: book do |f| %>
          <p>Title</p>
          <%= f.text_field :title %>
          <p>Opinion</p>
          <%= f.text_area :body %>
          <p>
            <%= f.submit 'Create Book' %>
          </p>
        <% end %>

    </div>
